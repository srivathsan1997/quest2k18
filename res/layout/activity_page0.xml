<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/gradient"
android:id="@+id/page0"
tools:context="com.tce.naveen.quest.HomeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:background="#000000"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-6dp"
            android:layout_marginBottom="-6dp"
            android:layout_marginRight="2dp"
            app:srcCompat="@drawable/savelg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="270dp"
        android:orientation="vertical">

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:drawableLeft="@drawable/register"
            android:text="   Register"
            android:textSize="3mm"
            android:paddingRight="30dp"
            android:paddingLeft="20dp"
            android:id="@+id/register"
            android:textStyle="bold"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:drawableLeft="@drawable/event"
            android:text="   Events"
            android:textSize="3mm"
            android:paddingRight="30dp"
            android:paddingLeft="20dp"
            android:id="@+id/events"
            android:textStyle="bold"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:drawableLeft="@drawable/info"
            android:text="   About us"
            android:textSize="3mm"
            android:paddingRight="30dp"
            android:id="@+id/about"
            android:paddingLeft="20dp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:drawableLeft="@drawable/contact"
            android:text="   Contact us"
            android:textSize="3mm"
            android:paddingRight="30dp"
            android:paddingLeft="20dp"
            android:id="@+id/contact"
            android:textStyle="bold"/>

        <WebView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webView"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />
    </LinearLayout>




<TextView
    android:id="@+id/textView5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textView3"
    android:layout_marginTop="12dp"
    android:text="The Quest 2k18"
    android:textAlignment="center"
    android:textColor="#000"
    android:textSize="30dp"
    android:textStyle="bold" />


<TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView5"
    android:layout_marginLeft="200dp"
    android:textColor="#000"
    android:textStyle="italic"
    android:textSize="20dp"
    android:text="~ Save Vaigai" />

</RelativeLayout>
